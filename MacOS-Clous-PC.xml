stages:
  - fetch_token
  - setup_ngrok

# Stage per prelevare il token Ngrok
fetch_token:
  stage: fetch_token
  image: alpine:latest
  script:
    - apk add --no-cache git
    - git clone https://<username>:<access_token>@gitlab.com/<username>/<repository>.git
    - export NGR_AUTH_TOKEN=$(cat <repository>/ngrok_token.txt)
  artifacts:
    reports:
      dotenv: .env

# Stage per configurare e avviare Ngrok
setup_ngrok:
  stage: setup_ngrok
  image: ngrok/ngrok:latest
  script:
    - ./ngrok authtoken $NGR_AUTH_TOKEN
    - ./ngrok http 80
